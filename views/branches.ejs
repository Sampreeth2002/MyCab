<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Your Branch</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/home.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/branches.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
      crossorigin="anonymous"
    ></script>
  </head>
  <style>
    input,
    button {
      outline: none;
      text-decoration: none;
    }
  </style>
  <body style="background-color: #ffeac4">
    <div class="top">Step-2</div>
    <div class="title">Select the nearest branch for pickup</div>
    <% branches.forEach((branch)=>{ %>

    <div class="container" id="branch">
      <div class="rows">
        <div class="col-md-5 col-sm-12 imgs">
          <img src="<%=branch.address%>" width="100%" height="100%" />
        </div>
        <div class="col-md-5 col-sm-12 informations">
          <div class="rows"><%= branch.branchName %></div>
          <div class="rows" style="margin-top: 10px">
            <iframe
              src="<%= branch.maps %>"
              frameborder="0"
              width="100%"
              height="100%"
              allowfullscreen=""
              aria-hidden="false"
              tabindex="0"
            ></iframe>
          </div>
          <div class="rows" style="align-items: center; margin-top: 20px">
            <a href="/branch/<%=branch.branchId%>"
              ><button class="branch-cars">View Cars</button></a
            >
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </body>
</html>
